package imageResource;

import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;

public class StaticImageResource
{
  //here we save different images into public static BufferedImage
  public static BufferedImage[] backgroudImages = new BufferedImage[2];
  public static BufferedImage[] playerPlanes = new BufferedImage[2];
  
  public static void initializeImages()
  {
    for(int i = 0; i < backgroudImages.length; i++)
    {
      try
      {
        backgroudImages[i] = ImageIO.read(new File("imgs/bg" + i + ".png"));
      }
      catch( IOException e )
      {
        // TODO Auto-generated catch block
        e.printStackTrace();
      }
    }
  }
}
