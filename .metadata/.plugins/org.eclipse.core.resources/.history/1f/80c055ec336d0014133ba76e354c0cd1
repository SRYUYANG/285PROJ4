package ui;

import imageResource.StaticImageResource;

import java.awt.BorderLayout;
import java.awt.FlowLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JTextField;

public class LinkingUIPanel extends JPanel
{
  private static JTextField ipAddress;
  private static JButton link, exitProgram;
  private static JFrame parentFrame;
  private static JPanel nextJPanel;
  public LinkingUIPanel(JFrame _parentFrame, JPanel _nextJPanel)
  {
    parentFrame = _parentFrame;
    nextJPanel = _nextJPanel;
    this.setLayout(new BorderLayout());
    add(ipAddress, BorderLayout.CENTER);
    JPanel buttonJPanel = new JPanel();
    buttonJPanel.setLayout(new FlowLayout());
    link = new JButton("Link");
    link.addActionListener(new ActionListener()
    {
      
      @Override
      public void actionPerformed(ActionEvent e)
      {
        // TODO Auto-generated method stub
        parentFrame. GamePanel(StaticImageResource.backgroudImages[0]);
      }
    });
    exitProgram = new JButton("Exit");
    exitProgram.addActionListener(new ActionListener()
    {
      @Override
      public void actionPerformed(ActionEvent e)
      {
        // TODO Auto-generated method stub
        parentFrame.dispose();
      }
    });
    buttonJPanel.add(link);
    buttonJPanel.add(exitProgram);
  }
}
